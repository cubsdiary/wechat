.login{
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #f2f2f2;
  padding-top: 75rpx;
}
.title{
  height: 214rpx;
  line-height: 214rpx;
  text-align: center;
  font-size: 36rpx;
  color: #000000;
}
.form{
  height: 224rpx;
  padding: 0rpx 30rpx;
  display: flex;
  flex-direction: column;
  -webkit-box-shadow:0 0 10rpx rgba(0,0,0,0.1);
  -moz-box-shadow:0 0 10rpx rgba(0,0,0,0.1);
  box-shadow:0 0 10rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
  background-color: #fff;
}
.number-show{
  height: 112rpx;
  line-height: 112rpx;
  font-size: 30rpx;
  color: #000;
  border-bottom: 1rpx solid #ebebeb;
}
.pwd-input{
  height: 112rpx;
  display: flex;
}
.pwd-input .input{
  box-sizing: border-box;
  width: 630rpx;
  height: 112rpx;
}
.pwd-input .placeholder{
  font-size: 30rpx;
  color: #999;
}
.pwd-input .reset{
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 11rpx;
  background-image: url('https://www.gt1.shop/images/unseen@2x.png');
  background-size: 32rpx 32rpx;
  background-repeat: no-repeat;
  background-position: center center;
}
.pwd-input .reset.seen{
  background-image: url('https://www.gt1.shop/images/seen@2x.png');
}
.submit{
  width: 710rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #4a4c5b;
  font-size: 30rpx;
  color: #fff;
  margin: 0 auto;
  border-radius: 5rpx;
  text-align: center;
}
.submit.disable{
  background-color: #999;
} 