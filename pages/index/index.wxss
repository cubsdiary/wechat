/**index.wxss**/
.container{
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #f2f2f2;
}
.container .title {
  display: flex;
  height: 100rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 0rpx 30rpx;
}
.title .address{
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.title .title-info{
  width: 78rpx;
  font-size: 26rpx;
  color: #6a6a6a;
  line-height: 100rpx;
  margin-right: 7rpx;
}
.title .now-time{
  width: 150rpx;
  font-size: 26rpx;
  color: #4a4a4a;
  line-height: 100rpx;
}
.title .next-time{
  width: 168rpx;
  font-size: 26rpx;
  color: #4a4a4a;
  text-align: right;
  line-height: 100rpx;
}
.title .address-sele{
  display: inline-block;
  padding: 18rpx 27rpx 22rpx 27rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  color: #fff;
  background-image: url('https://www.gt1.shop/images/btn@2x.png');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 100% 100%;
}
.title .address-sele .text{
  padding-right: 30rpx;
  background-image: url('https://www.gt1.shop/images/triangle@2x.png');
  background-repeat: no-repeat;
  background-position: right center;
  background-size: 16rpx 9rpx;
}
.container .shopping {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.shopping .shop-time{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #fff;
}
.shopping .shop-time .shop-time-txt{
  font-size: 26rpx;
  color: #a5a5a5;
  margin-right: 24rpx;
}
.shopping .shop-time .time{
  width: 200rpx;
  height: 50rpx;
  display: flex;
}
.shop-time .time .time-txt{
  flex: 1;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #ffffff;
  background-color: #555555;

}
.shop-time .time .time-space{
  width: 24rpx;
  background-image: url('https://www.gt1.shop/images/pointer@3x.png');
  background-size: 4rpx 13rpx;
  background-repeat: no-repeat;
  background-position: center center;
}
.shopping .shop-list{
  flex: 1;
}
.shop-list .shop-info{
  border-top: 1px solid #f2f2f2;
  background-color: #fff;
  padding: 22rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  height: 195rpx;
  display: flex;
}
.shop-info .good-img{
  width: 150rpx;
  margin-right: 40rpx;
}
.shop-info .good-info{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.shop-info .good-info .good-title{
  height: 63rpx;
  font-size: 26rpx;
  color: #555555;
}
.shop-info .good-info .good-num{
  height: 30rpx;
  display: flex;
  justify-content: flex-end;
}
.shop-info .good-info .good-num .txt{
  display: flex;
  width: 170rpx;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #ff5b4b;
}
.shop-info .good-info .good-take{
  flex: 1;
  display: flex;
}
.shop-info .good-info .good-take .go-txt{
  flex: 1;
  display: flex;
  align-items: center;
  text-align: left;
  font-size: 26rpx;
  color: #ff5b4b;
} 
.shop-info .good-info .good-take .go-btn{
  width: 170rpx;
  color: #ffffff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff5149;
  border-radius: 0;
  border: 0;
}
@media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3) {
  .container .title .address-sele{
    background-image: url('https://www.gt1.shop/images/btn@3x.png');
  }
  .container .title .address-sele .text{
    background-image: url('https://www.gt1.shop/images/triangle@3x.png');
  }
   .container .shop-time .time .time-space{
    background-image: url('https://www.gt1.shop/images/pointer@3x.png');
  }
} 
