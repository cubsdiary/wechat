<view class="register">
  <view class="title">注册</view>
  <view class="form">
    <view class="number-show" bindtap="modifyPhone">
      {{userPhone}}
    </view>
    <view class="code">
      <input class="input" type="number" value="{{inputCode}}" placeholder="请输入验证码" placeholder-class="placeholder" maxlength="6" focus="{{focus}}" bindinput="getValue"/>
      <view class="{{onceCode ? 'reset' : 'reset disable'}}" bindtap="getCode"></view>
    </view>
  </view>
  <view class="{{submitBtn ? 'submit' : 'submit disable'}}" bindtap="goRegister">登录</view>
</view>