.home{
  flex: 1;
  background: #f2f2f2;
  display: flex;
  flex-direction: column;
  padding-top: 25rpx;
}
.active-list{
  flex: 1;
  overflow: hidden;
}
.active{
  box-sizing: border-box;
  height: 436rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 10rpx;
}
.img {
  height: 270rpx;
  margin-bottom: 25rpx;
}
.name{
  line-height: 36rpx;
  font-size: 28rpx;
  color: #555555;
  font-weight: bold;
} 
.time{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #ff7575;
  text-align: right;
}